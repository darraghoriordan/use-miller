{
    "name": "use-miller",
    "version": "1.0.1",
    "description": "Dev tooling",
    "private": true,
    "type": "module",
    "license": "UNLICENSED",
    "packageManager": "pnpm@7.29.1",
    "repository": {
        "type": "git",
        "url": "https://github.com/darraghoriordan/use-miller.git"
    },
    "author": "Use Miller",
    "engines": {
        "node": ">=18",
        "pnpm": ">=7"
    },
    "scripts": {
        "clean": "rm -Rf ./dist/",
        "build": "pnpm run -r --parallel --filter=!*{backend-e2e,frontend}* build",
        "test": "pnpm run -r --parallel --filter=!*{backend-e2e,frontend}* test",
        "lint": "pnpm run -r --parallel --filter=!*{backend-e2e,frontend}* lint",
        "mill:dev": "cd apps/backend && npm run up -d && cd ../.. && concurrently \"cd apps/frontend && npm run start\" \"cd apps/backend && npm run start\"",
        "start:be:prod": "cd apps/backend && npm run start:prod",
        "prettier": "prettier --write src/*",
        "prepare": "husky install && chmod ug+x .husky/*",
        "mill:init": "pnpm install && node --experimental-modules libs/project-setup/dist/miller-setup.js",
        "release": "npx semantic-release",
        "semantic-release": "semantic-release",
        "knip": "knip"
    },
    "dependencies": {
        "@types/inquirer": "9.0.3",
        "tslib": "^2.5.0"
    },
    "devDependencies": {
        "@commitlint/cli": "17.4.4",
        "@commitlint/config-conventional": "17.4.4",
        "@nrwl/eslint-plugin-nx": "15.8.6",
        "@nrwl/jest": "15.8.6",
        "@nrwl/linter": "15.8.6",
        "@nrwl/node": "15.8.6",
        "@types/figlet": "1.5.5",
        "@types/jest": "29.4.0",
        "@types/node": "18.15.1",
        "@typescript-eslint/eslint-plugin": "5.54.1",
        "@typescript-eslint/parser": "5.54.1",
        "chalk": "5.2.0",
        "concurrently": "7.6.0",
        "dotenv": "16.0.3",
        "eslint": "8.36.0",
        "eslint-config-prettier": "8.7.0",
        "figlet": "1.5.2",
        "globby": "13.1.3",
        "husky": "8.0.3",
        "inquirer": "9.1.4",
        "jest": "29.5.0",
        "jest-environment-jsdom": "29.5.0",
        "knip": "1.15.0",
        "lerna": "6.5.1",
        "lint-staged": "13.2.0",
        "nx": "15.8.6",
        "prettier": "2.8.4",
        "ts-jest": "29.0.5",
        "ts-node": "10.9.1",
        "typescript": "4.9.5"
    },
    "release": {
        "branches": [
            "main"
        ],
        "plugins": [
            "@semantic-release/commit-analyzer",
            "@semantic-release/release-notes-generator",
            [
                "@semantic-release/github",
                {
                    "assets": []
                }
            ]
        ]
    }
}
